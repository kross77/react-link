{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "__tests__"
  ],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}
